<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_body">
      <%= comment.content %>
    </p>
    <p class="comment_time">
      <small><%= time_ago_in_words(comment.created_at) %> ago by <%= link_to current_user.name, user_post_path(current_user) %></small>
    </p>

  </div>

  <p>
    <%= link_to 'Delete', [comment.post, comment],
          method: :delete, :comment_id => comment.id,
          class: "button",
          data: { confirm: 'Are you sure?'}
    %>
  </p>


</div>
