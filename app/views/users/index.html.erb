<table>
  <thead>
    <tr>
      <th colspan="2">Name</th>
      <th colspan="2">Email</th>
      <th colspan="2">When did user join?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td colspan="2"><%= user.name %></td>
        <td colspan="2"><%= user.email %></td>
        <td colspan="2"><%= user.created_at %></td>
        <% if user_logged_in? %>
          <td colspan="4"><%= link_to 'Show', user %></td>
          <td colspan="4"><%= link_to 'Edit', edit_user_path(user) %></td>
          <td colspan="4"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="container padded text-center">
    <p>Copyright &copy; Ak</p>
</div>

