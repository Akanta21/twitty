<!DOCTYPE html>
<html>
  <head>
    <title>Twitty</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_logged_in? %>
      <h3>Hello, <%= current_user.name %></h3>
      <button type="button" class="btn btn-info"><%= link_to "Logout", logout_path, method: :delete %></button>
    <% else %>
      <button type="button" class="btn btn-info"><%= link_to "Login", login_path %></button>
    <% end %>
    <% flash.each do |name, message| %>
      <div class = "flash-message flash-message-<%= name %>">
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
