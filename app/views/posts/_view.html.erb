<blockquote class="col-xs-12 col-sm-8 col-md-8">
 <table class="table forum table-striped">
   <thead>
     <tr>
       <th class="cell-stat"></th>
       <th>
         <h3><strong>Posts</strong></h3>
       </th>
       <th class="cell-stat text-center ">Posted By</th>
       <th class="cell-stat text-center ">Last Post</th>
       <th class="cell-stat-2x text-center ">Number of Comments</th>
     </tr>
   </thead>
   <% @posts.each do |post| %>
   <tbody>
     <tr>
       <td class="text-center"><i class="fa fa-heart fa-2x text-primary"></i></td>
       <td class="text-left">
         <h6><%= link_to  post.title, user_post_path(post.user_id, post), class: "btn btn-default" %></h6>
       </td>
       <td class="text-center "><%= post.user.name %></td>
       <td class="text-center "><%= time_ago_in_words(post.created_at) %></td>
       <td class="text-center "><%= post.comments.count %></td>
     </tr>
   </tbody>
   <% end %>
 </table>
</blockquote>
