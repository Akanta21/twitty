<blockquote class= "blockquote-left">
  <div class="page-header">
    <h2 id="timeline"><%= @post.title %></h2>
  </div>
        <div class="timeline-heading">
          <p><%= @post.body %></p>
          <br/>
          <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %> </small></p>
        </div>
        <div class="timeline-body">
          <br />
          <% if user_logged_in? %>
            <%= link_to 'Edit', edit_user_post_path(current_user, @post), class:"btn btn-default" %>
          <% end %>
        </div>
  </blockquote>
  <blockquote class="col-sm-8">
    <div id="comments">
      <h2>Comments</h2>
      <%= render @post.comments %>

      <h3>Add a Comment</h3>
      <%= render "comments/form" %>
    </div>
  </blockquote>
