<%= form_for([current_user, post]) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h1><%= notice %></h1>
  <div class="form-horizontal">
    <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label"%>
    <div class="col-sm-4">
      <%= f.text_field :title, class: "form-control" %>
    </div>
    </div>
    <div class="form-group">
    <%= f.label :body, class: "col-sm-2 control-label"%>
    <div class="col-sm-4">
      <%= f.text_area :body, class: "form-control", :cols => "10", :rows => "10"  %>
    </div>
    </div>
    <div class="form-group">
    <%= f.label :user_id, class: "col-sm-2 control-label"%>
    <div class="col-sm-4">
      <%= f.text_field :user_id, :value => current_user.id, class: "form-control" %>
    </div>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
